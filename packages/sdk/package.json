{
  "name": "@prediction-market/sdk",
  "version": "0.1.0",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf dist",
    "test": "mocha --require ts-node/register 'tests/**/*.test.ts' --timeout 30000",
    "test:unit": "mocha --require ts-node/register 'tests/unit/**/*.test.ts'",
    "test:integration": "mocha --require ts-node/register 'tests/integration/**/*.test.ts' --timeout 60000",
    "test:watch": "npm run test -- --watch",
    "coverage": "nyc npm run test",
    "lint": "eslint src tests --ext .ts",
    "format": "prettier --write 'src/**/*.ts' 'tests/**/*.ts'"
  },
  "dependencies": {
    "@coral-xyz/anchor": "^0.31.1",
    "@solana/web3.js": "^1.87.6",
    "bn.js": "^5.2.1"
  },
  "devDependencies": {
    "@types/bn.js": "^5.1.5",
    "@types/chai": "^4.3.20",
    "@types/mocha": "^10.0.10",
    "@typescript-eslint/eslint-plugin": "^6.18.1",
    "@typescript-eslint/parser": "^6.18.1",
    "chai": "^4.5.0",
    "eslint": "^8.56.0",
    "mocha": "^10.8.2",
    "nyc": "^15.1.0",
    "prettier": "^3.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.0"
  },
  "nyc": {
    "extension": [
      ".ts"
    ],
    "exclude": [
      "**/*.d.ts",
      "tests/**/*",
      "dist/**/*"
    ],
    "reporter": [
      "html",
      "text",
      "text-summary"
    ],
    "all": true
  }
}
